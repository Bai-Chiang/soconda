#!/bin/bash

kerneldir=${HOME}/.local/share/jupyter/kernels/soconda-mss3-@VERSION@
if [ -d ${kerneldir} ]; then
    echo "soconda-mss3 @VERSION@ is already installed in ${kerneldir}, skipping." >&2
    exit 0
else
    echo "soconda-mss3 installing kernel version @VERSION@ to ${kerneldir}"
fi
mkdir -p "${kerneldir}"
echo '
{
    "language": "python",
    "argv": [
        "@ENVPREFIX@/bin/python3",
        "-m",
        "ipykernel_launcher",
        "-f",
        "{connection_file}"
    ],
    "display_name": "soconda-mss3 @VERSION@",
    "env": {
        "PATH": "/usr/bin:@ENVPREFIX@/bin",
        "PYTHONPATH": "${HOME}/.local/soconda/@VERSION@/lib/python@PYVER@/site-packages"
    },
    "metadata": {
        "debugger": true
    }
}
' > "${kerneldir}/kernel.json"
cp "@ENVPREFIX@"/logo-* "${kerneldir}/"
exit 0
