
{
    "perlmutter": {
        "description"                 : "CPU nodes: 3072",
        "default_schema"              : "local",
        "schemas"                     : {
            "local"                   : {
                "job_manager_endpoint": "slurm://perlmutter-p1.nersc.gov/",
                "filesystem_endpoint" : "file://perlmutter-p1.nersc.gov/"
            },
            "batch"                   :
            {
                "job_manager_endpoint": "fork://localhost/",
                "filesystem_endpoint" : "file://localhost/"
            },
            "interactive"             : {
                "job_manager_endpoint": "fork://localhost/",
                "filesystem_endpoint" : "file://localhost/"
            }
        },
        "default_queue"               : "regular",
        "resource_manager"            : "SLURM",
        "agent_scheduler"             : "CONTINUOUS",
        "agent_spawner"               : "POPEN",
        "launch_methods"              : {
                                         "order": ["SRUN"],
                                         "SRUN" : {
                                            "pre_exec_cached": [
                                                "module load soconda",
                                                "conda activate $PSCRATCH/soconda"
                                            ]
                                        }
                                        },
        "pre_bootstrap_0"             : [
            
            "module load soconda",
            "conda activate $PSCRATCH/soconda"
                                        ],
        "default_remote_workdir"      : "$PSCRATCH",
        "virtenv_mode"                : "use",
        "python_dist": "anaconda",
        "cores_per_node"              : 128,
        "virtenv": "$PSCRATCH/soconda",
        "system_architecture"         : {
                                         "smt"     : 2,
                                         "options" : ["cpu"]
                                        },
        "task_pre_exec": [
            
            "module load soconda",
            "conda activate $PSCRATCH/soconda"
        ]
    }
}